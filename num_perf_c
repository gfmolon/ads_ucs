#include <stdio.h>

int main() {

    int i, n, divs=0;

    printf("Digite um número\n");
    scanf("%d",&n);

    for (i=1; i < n; i++) {
        if (n % i == 0) {
            divs +=i; 

        }
    }

    if (divs == n) {
        printf("%d é um número perfeito.\n",n);
    } else {
        printf("%d não é um número perfeito. \n",n);
    }

return 0;
}


