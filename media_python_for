media_geral = 0

for i in range(1, 11):
    n1 = float(input("Informe a nota 1"))
    n2 = float(input("Informe a nota 2"))
    n3 = float(input("Informe a nota 3"))

    media_aluno = (n1 + n2 + n3) / 3
    media_geral += media_aluno
    print(f"Aluno {i}")
    print(f"Média: {media_aluno:.2f}")

media_geral = media_geral / 10
print("**********************************************")
print(f"Média Geral da turma 10 Alunos: {media_geral:.2f}")
